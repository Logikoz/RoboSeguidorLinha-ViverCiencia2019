<Window
    x:Class="ReacaoRobo.Views.TelaPrincipalView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ReacaoRobo.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Reaçoes do Robo"
    Width="1000"
    Height="450"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    mc:Ignorable="d">
    <Grid>
        <materialDesign:Card
            Height="70"
            VerticalAlignment="Top"
            materialDesign:ShadowAssist.ShadowDepth="Depth3"
            materialDesign:ShadowAssist.ShadowEdges="Bottom"
            Background="{StaticResource PrimaryHueMidBrush}">
            <Grid>
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Vertical">
                    <TextBlock
                        FontWeight="Bold"
                        Foreground="White"
                        Style="{StaticResource MaterialDesignHeadlineTextBlock}"
                        Text="Viver Ciencia" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontWeight="Bold"
                        Foreground="White"
                        Style="{StaticResource MaterialDesignTitleTextBlock}"
                        Text="2019" />
                </StackPanel>
            </Grid>
        </materialDesign:Card>
        <Grid Margin="0,70,0,0">
            <Image
                MaxWidth="250"
                Margin="50"
                HorizontalAlignment="Left"
                Source="/Recursos/RoboViverCiencia.png" />
            <Image
                MaxWidth="250"
                Margin="50"
                HorizontalAlignment="Right"
                Source="/Recursos/RoboViverCiencia.png" />
            <Grid
                Margin="250,20,250,20"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <materialDesign:Card Grid.Row="0" VerticalAlignment="Stretch" />
                <materialDesign:Card Grid.Row="2" VerticalAlignment="Stretch" />

            </Grid>
        </Grid>
    </Grid>
</Window>
