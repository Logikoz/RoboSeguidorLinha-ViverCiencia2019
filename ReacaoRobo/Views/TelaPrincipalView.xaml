<Window
    x:Class="ReacaoRobo.Views.TelaPrincipalView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ReacaoRobo.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Reaçoes do Robo"
    MinWidth="600"
    MinHeight="400"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    mc:Ignorable="d">
    <Grid>
        <materialDesign:Card
            Height="70"
            VerticalAlignment="Top"
            materialDesign:ShadowAssist.ShadowDepth="Depth3"
            materialDesign:ShadowAssist.ShadowEdges="Bottom"
            Background="{StaticResource PrimaryHueMidBrush}">
            <Grid>
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Vertical">
                    <TextBlock
                        FontWeight="Bold"
                        Foreground="White"
                        Style="{StaticResource MaterialDesignHeadlineTextBlock}"
                        Text="Viver Ciencia" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontWeight="Bold"
                        Foreground="White"
                        Style="{StaticResource MaterialDesignTitleTextBlock}"
                        Text="2019" />
                </StackPanel>
            </Grid>
        </materialDesign:Card>
        <Grid Margin="0,70,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition MaxWidth="250" />
                <ColumnDefinition Width="*" MinWidth="450" />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>
            <Image
                Grid.Column="0"
                MaxWidth="150"
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Source="/Recursos/RoboViverCiencia.png" />
            <Grid Grid.Column="2" Margin="10">
                <TextBlock
                    Margin="10"
                    HorizontalAlignment="Center"
                    Text="Requisiçoes" />
                <RichTextBox x:Name="CaixaRespostaRequisicao_rtb" Margin="0,30,0,0" />
            </Grid>
            <Grid
                Grid.Column="1"
                Margin="30"
                VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="*" MaxHeight="400" />
                </Grid.RowDefinitions>
                <materialDesign:Card Grid.Row="0" VerticalAlignment="Stretch">
                    <Grid Margin="10">
                        <StackPanel
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock VerticalAlignment="Center" Text="Status do Robo: " />
                                <Label Content="{Binding StatusRobo, Mode=TwoWay}" />
                            </StackPanel>
                        </StackPanel>
                        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                            <TextBox
                                Width="200"
                                materialDesign:HintAssist.Hint="IP do Servidor"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                Text="{Binding ServidorURI, Mode=OneWay}" />
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>
                <materialDesign:Card Grid.Row="2" VerticalAlignment="Stretch" />
            </Grid>
        </Grid>
    </Grid>
</Window>
